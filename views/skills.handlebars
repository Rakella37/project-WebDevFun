   <div id="skills">
  <h1 class="skills-title">Skills</h1>
  <ul>
    {{#each skills}}
      <li class="skill-item">
        <h3 class="skill-topic">{{this.stitle}}</h3>
        <p class="p-space">{{this.sdescription}}</p>
        {{#if ../session.isAdmin}}
          <form action="/skills/update/{{this.sid}}" method="post" class="skills-form">
            <input class="skills-inputs" type="text" name="stitle" placeholder="New Title" required />
            <input
            class="skills-inputs"
              type="text"
              name="sdescription"
              placeholder="New Description"
              required
            />
            <button class="skill-btn" type="submit">Update</button>
          </form>

          <form
            action="/skills/delete/{{this.sid}}"
            method="post"
            style="display:inline;"
          >
            <button
            class="skill-btn-delete" 
              type="submit"
              onclick="return confirm('Are you sure you want to delete this skill?');"
            >Delete</button>
          </form>
        {{/if}}
      </li>
    {{/each}}
  </ul>


  {{#if session.isAdmin}}
    <h2 class="add-skills-title">Add New Skill</h2>
    <form action="/skills/add" method="post">
      <input class="add-skills-input" type="text" name="stitle" placeholder="Skill Title" required />
      <input
      class="add-skills-input"
        type="text"
        name="sdescription"
        placeholder="Skill Description"
        required
      />
      <button class="skills-btn" type="submit">Add Skill</button>
    </form>
  {{/if}}
</div>